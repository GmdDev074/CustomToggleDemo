<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Autoplay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <com.example.customtoggle.demo.toggle_helper.CustomToggle
                android:id="@+id/toggle_autoplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:toggleType="AUTOPLAY"/>

            <TextView
                android:id="@+id/text_autoplay"
                android:text="Autoplay Disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Download only on Wi-Fi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <com.example.customtoggle.demo.toggle_helper.CustomToggle
                android:id="@+id/toggle_wifi_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:toggleType="WIFI_ONLY_DOWNLOAD" />

            <TextView
                android:id="@+id/text_wifi_only"
                android:text="Download on Mobile Data Allowed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- High-Quality Streaming -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <com.example.customtoggle.demo.toggle_helper.CustomToggle
                android:id="@+id/toggle_high_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:toggleType="HIGH_QUALITY_STREAMING"/>

            <TextView
                android:id="@+id/text_high_quality"
                android:text="Standard Quality Streaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Background Playback -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <com.example.customtoggle.demo.toggle_helper.CustomToggle
                android:id="@+id/toggle_background_playback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:toggleType="BACKGROUND_PLAYBACK"/>

            <TextView
                android:id="@+id/text_background_playback"
                android:text="Background Playback Disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Subtitles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <com.example.customtoggle.demo.toggle_helper.CustomToggle
                android:id="@+id/toggle_subtitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:toggleType="SUBTITLES"/>

            <TextView
                android:id="@+id/text_subtitles"
                android:text="Subtitles Disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Camera Flash -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <com.example.customtoggle.demo.toggle_helper.CustomToggle
                android:id="@+id/toggle_flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:toggleType="CAMERA_FLASH"/>

            <TextView
                android:id="@+id/text_flash"
                android:text="Flash OFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Camera Filters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <com.example.customtoggle.demo.toggle_helper.CustomToggle
                android:id="@+id/toggle_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:toggleType="CAMERA_FILTERS"/>

            <TextView
                android:id="@+id/text_filters"
                android:text="Filters Disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
